@page "{partId:int}"
@model RazorPage.Pages.Staff.PartRequest.CreateModel
@{
    Layout = "_StaffLayout";
    ViewData["Title"] = "Tạo yêu cầu linh kiện";
}
<h2 class="mb-3">Tạo yêu cầu linh kiện</h2>

<form method="post" class="card card-body">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-2">
        <label class="form-label">Linh kiện</label>
        <select class="form-select"
                asp-for="Input.PartId"
                asp-items="@(new SelectList(Model.Parts, "PartId", "Name"))">
            <option value="">-- Chọn linh kiện --</option>
        </select>
        <span asp-validation-for="Input.PartId" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label class="form-label">Số lượng</label>
        <input class="form-control" asp-for="Input.Quantity" type="number" min="1" />
        <span asp-validation-for="Input.Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Ghi chú</label>
        <textarea class="form-control" asp-for="Input.Notes"></textarea>
        <span asp-validation-for="Input.Notes" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-primary" type="submit">Gửi yêu cầu</button>
        <a asp-page="MyRequests" class="btn btn-outline-secondary">Danh sách của tôi</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}