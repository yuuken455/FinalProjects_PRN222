@page "{id:int}"
@model RazorPage.Pages.Staff.Appointment.DetailModel
@{
    Layout = "_StaffLayout";
    ViewData["Title"] = $"Chi tiết lịch hẹn #{Model.AppointmentDto?.AppointmentId}";
    var a = Model.AppointmentDto;
    var services = a?.ServiceOrderDetailDtos?.Where(s => s.ServiceDto != null).ToList() ?? new();
    int totalDuration = services.Sum(s => s.ServiceDto!.Duration);
    var payment = a?.PaymentDtos?.FirstOrDefault();
}

@if (TempData["Msg"] is string msg)
{
    <div class="alert alert-success">@msg</div>
}
@if (TempData["Err"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

<div class="page-header mb-4">
    <h2 class="fw-semibold mb-1">Chi tiết lịch hẹn #@a?.AppointmentId</h2>
    <div class="d-flex flex-wrap gap-2 align-items-center text-muted small">
        <span><i class="bi bi-clock"></i> @a?.Date.ToString("dd/MM/yyyy HH:mm")</span>
        <span>•</span>
        <span class="text-uppercase badge bg-secondary">@a?.Status</span>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h5 class="card-title mb-3">Thông tin chung</h5>
                <div class="row g-3 small">
                    <div class="col-md-6">
                        <div class="text-muted">Khách hàng</div>
                        <div>@a?.CustomerDto?.AccountDto?.FullName (ID: @a?.CustomerId)</div>
                    </div>
                    <div class="col-md-6">
                        <div class="text-muted">Xe</div>
                        <div>Biển số: @a?.VehicleDto?.LicensePlate (ID: @a?.VehicleId)</div>
                    </div>
                    <div class="col-md-6">
                        <div class="text-muted">Ghi chú</div>
                        <div>@(string.IsNullOrWhiteSpace(a?.Notes) ? "-" : a!.Notes)</div>
                    </div>
                    <div class="col-md-6">
                        <div class="text-muted">Thời lượng ước tính</div>
                        <div>@totalDuration phút</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0 mt-3">
            <div class="card-body">
                <h5 class="card-title mb-3">Dịch vụ đã đặt (@services.Count)</h5>
                @if (!services.Any())
                {
                    <div class="text-muted">Không có dịch vụ.</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Dịch vụ</th>
                                    <th>Loại</th>
                                    <th>Thời lượng (phút)</th>
                                    <th>Đơn giá</th>
                                    <th>SL phụ tùng đã dùng</th>
                                    <th>Tổng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var s in services)
                                {
                                    var type = s.ServiceDto!.Type;
                                    bool isReplace = string.Equals(type, "Replace", StringComparison.OrdinalIgnoreCase);
                                    <tr>
                                        <td>@s.OrderDetailId</td>
                                        <td>
                                            <div class="fw-semibold">@s.ServiceDto!.Name</div>
                                            <div class="text-muted small">@s.ServiceDto.Description</div>
                                            @if (isReplace)
                                            {
                                                if (s.ServiceDto.PartDtos != null && s.ServiceDto.PartDtos.Any())
                                                {
                                                    <div class="mt-2 small">
                                                        <span class="text-secondary me-1"><i class="bi bi-box-seam"></i> Phụ tùng:</span>
                                                        @foreach (var p in s.ServiceDto.PartDtos)
                                                        {
                                                            <span class="badge bg-light text-dark border me-1" title="Đơn giá: @p.UnitPrice.ToString("N0") đ">@p.Name</span>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="mt-2 small text-muted"><i class="bi bi-info-circle"></i> Chưa có phụ tùng liệt kê.</div>
                                                }
                                            }
                                        </td>
                                        <td>@type</td>
                                        <td>@s.ServiceDto.Duration</td>
                                        <td>@string.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:c0}", s.UnitPrice)</td>
                                        <td>
                                            @if (isReplace)
                                            {
                                                <span class="badge bg-primary-subtle text-primary" title="Số lượng phụ tùng đã thay">@s.Quantity</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>@string.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:c0}", s.TotalPrice)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm border-0 mb-3">
            <div class="card-body">
                <h5 class="card-title mb-3">Thanh toán</h5>
                @if (payment == null)
                {
                    <div class="alert alert-warning">Chưa tạo hóa đơn.</div>
                }
                else
                {
                    <ul class="list-unstyled small mb-3">
                        <li class="mb-2"><strong>Tổng tiền:</strong> @string.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:c0}", payment.TotalAmount)</li>
                        <li class="mb-2"><strong>Đã trả:</strong> @string.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:c0}", payment.PaidAmount ?? 0)</li>
                        <li class="mb-2"><strong>Còn lại:</strong> @string.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:c0}", payment.RemainingAmount ?? (payment.TotalAmount - (payment.PaidAmount ?? 0)))</li>
                        <li class="mb-2"><strong>Trạng thái:</strong> @payment.PaymentStatus</li>
                    </ul>
                    @if (string.Equals(payment.PaymentStatus, "UnPaid", StringComparison.OrdinalIgnoreCase) || string.Equals(payment.PaymentStatus, "Unpaid", StringComparison.OrdinalIgnoreCase))
                    {
                        <form method="post" asp-page-handler="Pay" class="d-grid gap-2">
                            <input type="hidden" name="id" value="@a!.AppointmentId" />
                            <button type="submit" class="btn btn-success"><i class="bi bi-cash-coin"></i> Thanh toán</button>
                        </form>
                    }
                }
            </div>
        </div>

        <div class="card shadow-sm border-0 mb-3">
            <div class="card-body">
                <h5 class="card-title mb-3">Kỹ thuật viên</h5>
                @if (a?.TechnicianAssignmentDtos == null || !a.TechnicianAssignmentDtos.Any())
                {
                    <div class="text-muted">Chưa gán kỹ thuật viên.</div>
                }
                else
                {
                    <ul class="list-group list-group-flush small">
                        @foreach (var ta in a.TechnicianAssignmentDtos.OrderBy(x => x.Role))
                        {
                            <li class="list-group-item px-0 d-flex justify-content-between align-items-center">
                                <span>@ta.TechnicianDto?.AccountDto?.FullName</span>
                                <span class="badge text-bg-light">@ta.Role</span>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>

        @if (string.Equals(a?.Status, "Pending", StringComparison.OrdinalIgnoreCase))
        {
            <div class="card shadow-sm border-0 mb-3">
                <div class="card-body">
                    <h5 class="card-title mb-3">Gán kỹ thuật viên</h5>
                    <form method="post" asp-page-handler="Assign" class="mb-2">
                        <input type="hidden" name="id" value="@a!.AppointmentId" />
                        <div class="mb-3">
                            <label class="form-label">Kỹ thuật viên chính (Main)</label>
                            <select class="form-select" asp-for="MainTechnicianId">
                                <option value="">-- Chọn --</option>
                                @foreach (var t in Model.FreeTechnicians)
                                {
                                    <option value="@t.TechnicianId">@t.AccountDto.FullName (#@t.TechnicianId)</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Kỹ thuật viên hỗ trợ (Assistant)</label>
                            <select class="form-select" asp-for="AssistantTechnicianId">
                                <option value="">-- Chọn --</option>
                                @foreach (var t in Model.FreeTechnicians)
                                {
                                    <option value="@t.TechnicianId">@t.AccountDto.FullName (#@t.TechnicianId)</option>
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Lưu gán</button>
                    </form>
                    <form method="post" asp-page-handler="Cancel" asp-route-id="@a!.AppointmentId" onsubmit="return confirm('Hủy lịch hẹn này?');">
                        <button type="submit" class="btn btn-outline-danger"><i class="bi bi-x-circle"></i> Hủy lịch</button>
                    </form>
                </div>
            </div>
        }
        else
        {
            <div class="d-grid mb-3">
                <a asp-page="./Index" class="btn btn-light">Quay lại</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
}
