@page "{id:int}"
@model RazorPage.Pages.Technician.DetailModel
@{
    ViewData["Title"] = $"Chi tiết lịch hẹn #{Model.AppointmentDto?.AppointmentId}";
    var a = Model.AppointmentDto;
    var services = a?.ServiceOrderDetailDtos?.Where(s => s.ServiceDto != null).ToList() ?? new();
    var replaceItems = services.Where(s => string.Equals(s.ServiceDto!.Type, "Replace", StringComparison.OrdinalIgnoreCase)).ToList();
    var techIdStr = HttpContext.Session.GetString("TechnicianId");
    int.TryParse(techIdStr, out var techId);
    var isMain = a?.TechnicianAssignmentDtos?.Any(t => t.TechnicianId == techId && string.Equals(t.Role, "Main", StringComparison.OrdinalIgnoreCase)) ?? false;
    var isInprogress = string.Equals(a?.Status, "Inprogress", StringComparison.OrdinalIgnoreCase) || string.Equals(a?.Status, "InProgress", StringComparison.OrdinalIgnoreCase);
}

<div class="container-xxl py-4">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-2 mb-3">
        <h2 class="mb-0">Chi tiết lịch hẹn #@a?.AppointmentId</h2>
        <div class="d-flex gap-2">
            <a asp-page="./Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Quay về danh sách</a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title mb-3">Thông tin chung</h5>
                    <ul class="list-unstyled small mb-0">
                        <li class="mb-2"><strong>Thời gian:</strong> @a?.Date.ToString("dd/MM/yyyy HH:mm")</li>
                        <li class="mb-2"><strong>Trạng thái:</strong> @a?.Status</li>
                        <li class="mb-2"><strong>Xe:</strong> @a?.VehicleDto?.LicensePlate (#@a?.VehicleId)</li>
                        <li class="mb-2"><strong>Ghi chú:</strong> @(string.IsNullOrWhiteSpace(a?.Notes)?"-":a!.Notes)</li>
                    </ul>
                </div>
            </div>

            <div class="card shadow-sm border-0 mt-3">
                <div class="card-body">
                    <h5 class="card-title mb-3">Dịch vụ</h5>
                    <div class="table-responsive">
                        <table class="table table-sm align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Tên dịch vụ</th>
                                    <th>Loại</th>
                                    <th>Thời lượng (phút)</th>
                                    <th>Đơn giá</th>
                                    <th>SL dự kiến</th>
                                    <th>SL thực tế</th>
                                    <th>Phụ tùng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var s in services)
                                {
                                    var isReplace = string.Equals(s.ServiceDto!.Type, "Replace", StringComparison.OrdinalIgnoreCase);
                                    <tr>
                                        <td>@s.OrderDetailId</td>
                                        <td>
                                            <div class="fw-semibold">@s.ServiceDto!.Name</div>
                                            <div class="text-muted small">@s.ServiceDto.Description</div>
                                        </td>
                                        <td>@s.ServiceDto.Type</td>
                                        <td>@s.ServiceDto.Duration</td>
                                        <td>@string.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:c0}", s.UnitPrice)</td>
                                        <td>@s.Quantity</td>
                                        <td>
                                            @if (isReplace && isMain && isInprogress)
                                            {
                                                <input type="number" name="actual[@s.OrderDetailId]" min="0" class="form-control form-control-sm" value="@s.Quantity" form="completeForm" />
                                            }
                                            else if (isReplace)
                                            {
                                                <span>@s.Quantity</span>
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (isReplace && s.ServiceDto.PartDtos != null && s.ServiceDto.PartDtos.Any())
                                            {
                                                <div class="d-flex flex-wrap gap-1">
                                                    @foreach (var p in s.ServiceDto.PartDtos)
                                                    {
                                                        <span class="badge bg-light text-dark border" title="Đơn giá: @p.UnitPrice.ToString("N0") đ | Tồn kho: @p.StockQuantity">@p.Name</span>
                                                    }
                                                </div>
                                            }
                                            else if (isReplace)
                                            {
                                                <span class="text-muted small">Không có phụ tùng</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            @if (isMain && isInprogress)
            {
                <div class="card shadow-sm border-0 mb-3">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Thao tác</h5>
                        <form method="post" asp-page-handler="Complete" id="completeForm">
                            <input type="hidden" name="id" value="@a!.AppointmentId" />
                            <div class="mb-3">
                                <label class="form-label">Ghi chú</label>
                                <textarea name="note" rows="3" class="form-control" placeholder="Ghi chú khi hoàn tất (tuỳ chọn)"></textarea>
                            </div>
                            <button type="submit" class="btn btn-success w-100"><i class="bi bi-check2-circle"></i> Completed</button>
                        </form>
                        <hr />
                        <form method="post" asp-page-handler="Cancel" onsubmit="return confirm('Hủy lịch hẹn này?');">
                            <input type="hidden" name="id" value="@a!.AppointmentId" />
                            <div class="mb-3">
                                <label class="form-label">Lý do hủy</label>
                                <textarea name="note" rows="3" class="form-control" placeholder="Nhập lý do hủy"></textarea>
                            </div>
                            <button type="submit" class="btn btn-outline-danger w-100"><i class="bi bi-x-circle"></i> Cancel</button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">Chỉ kỹ thuật viên chính và khi lịch hẹn đang Inprogress mới có thể thao tác.</div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script>
        (function(){
            const conn = new signalR.HubConnectionBuilder()
                .withUrl('/hubs/notify')
                .withAutomaticReconnect()
                .build();

            const reload = () => location.reload();
            conn.on('AppointmentChanged', reload);
            conn.on('AppointmentDeleted', reload);
            conn.on('AppointmentsBulkChanged', reload);

            conn.start().catch(console.error);
        })();
    </script>
    <style>
        html,body{height:auto;overflow-y:auto !important;}
        .badge{font-size:.65rem;}
    </style>
}
