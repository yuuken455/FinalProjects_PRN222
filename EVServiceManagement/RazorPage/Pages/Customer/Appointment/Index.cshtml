@page
@model RazorPage.Pages.Customer.Appointment.IndexModel
@{
    ViewData["Title"] = "Lịch hẹn của tôi";
    var total = Model.AppointmentDtos?.Count ?? 0;
    var pending = Model.AppointmentDtos?.Count(a => a.Status?.ToLower() == "pending") ?? 0;
    var scheduled = Model.AppointmentDtos?.Count(a => a.Status?.ToLower() == "scheduled") ?? 0;
    var completed = Model.AppointmentDtos?.Count(a => a.Status?.ToLower() == "completed") ?? 0;
    var canceled = Model.AppointmentDtos?.Count(a => a.Status?.ToLower() is "canceled" or "cancelled") ?? 0;
}

<div class="container-xxl py-4">
    <div class="page-header mb-4">
        <div class="d-flex flex-wrap gap-3 align-items-start justify-content-between">
            <div>
                <h1 class="page-title mb-1 fw-semibold">Lịch hẹn của tôi</h1>
                <p class="text-secondary mb-0 small">Theo dõi và quản lý lịch hẹn dịch vụ xe của bạn.</p>
            </div>
            <div class="d-flex gap-2">
                <a asp-page="Create" class="btn btn-primary shadow-sm"><i class="bi bi-plus-circle me-1"></i> Tạo lịch hẹn</a>
                <a asp-page="../Index" class="btn btn-outline-secondary shadow-sm"><i class="bi bi-arrow-left me-1"></i> Quay về</a>
            </div>
        </div>
        <div class="stats-bar mt-3 d-flex flex-wrap gap-3">
            <div class="stat-box bg-gradient-primary text-white"><div class="label">Tổng</div><div class="value">@total</div></div>
            <div class="stat-box bg-gradient-warning text-white"><div class="label">Chờ</div><div class="value">@pending</div></div>
            <div class="stat-box bg-gradient-info text-white"><div class="label">Lên lịch</div><div class="value">@scheduled</div></div>
            <div class="stat-box bg-gradient-success text-white"><div class="label">Hoàn tất</div><div class="value">@completed</div></div>
            <div class="stat-box bg-gradient-secondary text-white"><div class="label">Đã huỷ</div><div class="value">@canceled</div></div>
        </div>
    </div>

    <div class="tool-bar mb-4 d-flex flex-column flex-lg-row gap-3 align-items-stretch">
        <div class="flex-grow-1 position-relative">
            <input type="text" class="form-control search-box ps-5" placeholder="Tìm kiếm theo mã, xe, dịch vụ, ghi chú..." id="searchBox" autocomplete="off" />
            <i class="bi bi-search position-absolute search-icon"></i>
        </div>
        <div class="d-flex flex-wrap gap-2" id="statusFilters">
            <button type="button" class="filter-chip active" data-status="all"><i class="bi bi-ui-checks-grid me-1"></i>Tất cả</button>
            <button type="button" class="filter-chip" data-status="pending"><i class="bi bi-hourglass-split me-1"></i>Chờ</button>
            <button type="button" class="filter-chip" data-status="scheduled"><i class="bi bi-check-circle me-1"></i>Lên lịch</button>
            <button type="button" class="filter-chip" data-status="completed"><i class="bi bi-flag me-1"></i>Hoàn tất</button>
            <button type="button" class="filter-chip" data-status="canceled"><i class="bi bi-x-circle me-1"></i>Huỷ</button>
        </div>
    </div>

    @if (Model.AppointmentDtos == null || !Model.AppointmentDtos.Any())
    {
        <div class="empty-state text-center py-5 px-3 border rounded-4 bg-white shadow-sm">
            <div class="display-6 mb-3 text-muted"><i class="bi bi-calendar2-check"></i></div>
            <h5 class="fw-semibold mb-2">Bạn chưa có lịch hẹn nào</h5>
            <p class="text-secondary mb-4 small">Tạo lịch hẹn đầu tiên để bắt đầu quản lý dịch vụ xe của bạn.</p>
            <a asp-page="Create" class="btn btn-primary btn-lg shadow-sm"><i class="bi bi-plus-circle me-1"></i> Tạo lịch hẹn</a>
        </div>
    }
    else
    {
        <div id="appointmentContainer" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var a in Model.AppointmentDtos.OrderByDescending(x => x.Date))
            {
                var status = a.Status?.ToLower();
                var services = a.ServiceOrderDetailDtos?.Where(s => s.ServiceDto != null).ToList() ?? new();
                var serviceNames = services.Select(s => s.ServiceDto!.Name).ToList();
                int totalDuration = services.Sum(s => s.ServiceDto!.Duration);
                decimal totalPrice = services.Sum(s => s.TotalPrice);
                var payment = a.PaymentDtos?.FirstOrDefault();
                var payStatus = payment?.PaymentStatus ?? "-";
                string color = status switch
                {
                    "pending" => "warning",
                    "scheduled" or "confirmed" => "info",
                    "completed" => "success",
                    "canceled" or "cancelled" => "secondary",
                    _ => "dark"
                };
                var mainTech = a.TechnicianAssignmentDtos?.FirstOrDefault(t => t.Role == "Main")?.TechnicianDto?.AccountDto?.FullName;
                var assistantTech = a.TechnicianAssignmentDtos?.FirstOrDefault(t => t.Role == "Assistant")?.TechnicianDto?.AccountDto?.FullName;
                var keywords = ($"{a.AppointmentId} {a.VehicleDto?.LicensePlate} {string.Join(' ',serviceNames)} {mainTech} {assistantTech} {a.Notes} {a.Status}")?.ToLower();
                <div class="col appointment-item" data-status="@status" data-keywords="@keywords">
                    <div class="appointment-card card h-100 border-0 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div class="d-flex align-items-center gap-2 flex-grow-1">
                                    <div class="appointment-avatar bg-primary-subtle text-primary"><i class="bi bi-calendar-event"></i></div>
                                    <h6 class="card-title mb-0">LH-@a.AppointmentId</h6>
                                </div>
                                <span class="badge status-badge bg-@color text-uppercase">@a.Status</span>
                            </div>
                            <div class="small text-muted mb-2">Ngày: @a.Date.ToString("dd/MM/yyyy HH:mm")</div>
                            <ul class="list-unstyled mb-3 small flex-grow-1">
                                <li><strong>Xe:</strong> @a.VehicleDto?.LicensePlate (ID: @a.VehicleId)</li>
                                <li><strong>Dịch vụ (@services.Count):</strong> @string.Join(", ", serviceNames)</li>
                                <li><strong>Thời lượng ước tính:</strong> @totalDuration phút</li>
                                <li><strong>Tổng dự kiến:</strong> @string.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:c0}", totalPrice)</li>
                                <li><strong>Thanh toán:</strong> @payStatus</li>
                                <li><strong>KTV chính:</strong> @(string.IsNullOrWhiteSpace(mainTech)?"-":mainTech)</li>
                                <li><strong>KTV phụ:</strong> @(string.IsNullOrWhiteSpace(assistantTech)?"-":assistantTech)</li>
                                <li><strong>Ghi chú:</strong> @(string.IsNullOrWhiteSpace(a.Notes) ? "-" : a.Notes)</li>
                            </ul>
                            <div class="d-flex gap-2 mt-auto">
                                @if (status == "pending")
                                {
                                    <form method="post" asp-page-handler="Cancel" asp-route-id="@a.AppointmentId" onsubmit="return confirm('Xoá lịch hẹn này?');" class="m-0 flex-grow-1">
                                        <button type="submit" class="btn btn-sm btn-outline-danger w-100"><i class="bi bi-trash"></i> Xoá</button>
                                    </form>
                                }
                                else if (status == "scheduled")
                                {
                                    <button type="button" class="btn btn-sm btn-outline-danger flex-grow-1" onclick="openCancelNote(@a.AppointmentId)"><i class="bi bi-x-circle"></i> Huỷ</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="modal fade" id="cancelModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Huỷ lịch hẹn</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form method="post" asp-page-handler="Cancel">
                        <div class="modal-body">
                            <input type="hidden" id="cancelId" name="id" />
                            <div class="mb-3">
                                <label class="form-label">Lý do huỷ</label>
                                <textarea class="form-control" name="note" rows="3" placeholder="Nhập lý do huỷ"></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-light" data-bs-dismiss="modal">Đóng</button>
                            <button type="submit" class="btn btn-danger">Xác nhận huỷ</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
<script>
(function(){
    const searchBox = document.getElementById('searchBox');
    const container = document.getElementById('appointmentContainer');
    const filterChips = document.querySelectorAll('#statusFilters .filter-chip');

    function applyFilters(){
        const q = searchBox.value.trim().toLowerCase();
        const activeChip = document.querySelector('#statusFilters .filter-chip.active');
        const statusFilter = activeChip?.dataset.status || 'all';
        const items = container ? Array.from(container.querySelectorAll('.appointment-item')) : [];
        items.forEach(el => {
            const keywords = el.dataset.keywords || '';
            const status = el.dataset.status || '';
            const matchSearch = !q || keywords.includes(q);
            const matchStatus = statusFilter === 'all' || status === statusFilter;
            el.style.display = (matchSearch && matchStatus) ? '' : 'none';
        });
    }

    searchBox?.addEventListener('input', applyFilters);
    filterChips.forEach(chip => {
        chip.addEventListener('click', () => {
            filterChips.forEach(c => c.classList.remove('active'));
            chip.classList.add('active');
            applyFilters();
        });
    });

    const conn = new signalR.HubConnectionBuilder()
        .withUrl('/hubs/notify')
        .withAutomaticReconnect()
        .build();

    const reloadPage = () => location.reload();
    conn.on('AppointmentChanged', reloadPage);
    conn.on('AppointmentDeleted', reloadPage);
    conn.on('AppointmentsBulkChanged', reloadPage);
    conn.start().catch(console.error);
})();

function openCancelNote(id){
    document.getElementById('cancelId').value = id;
    const modal = new bootstrap.Modal(document.getElementById('cancelModal'));
    modal.show();
}
</script>
<style>
html, body { height: auto; overflow-y: auto !important; }
.page-title{letter-spacing:.5px}
.stats-bar .stat-box{padding:.85rem 1.15rem;border-radius:1rem;min-width:150px;position:relative;overflow:hidden}
.stats-bar .stat-box .label{font-size:.65rem;text-transform:uppercase;opacity:.85;letter-spacing:.5px}
.stats-bar .stat-box .value{font-size:1.3rem;font-weight:600}
.bg-gradient-primary{background:linear-gradient(135deg,#4e73df,#224abe)}
.bg-gradient-warning{background:linear-gradient(135deg,#f6c23e,#d39e00)}
.bg-gradient-info{background:linear-gradient(135deg,#36b9cc,#258fa0)}
.bg-gradient-success{background:linear-gradient(135deg,#1cc88a,#0f8f5d)}
.bg-gradient-secondary{background:linear-gradient(135deg,#6c757d,#495057)}
.search-box{border-radius:1rem;box-shadow:0 .125rem .5rem rgba(0,0,0,.05)}
.search-icon{top:50%;left:1rem;transform:translateY(-50%);color:#6c757d}
.filter-chip{border:none;background:#f1f3f5;color:#495057;padding:.5rem .9rem;border-radius:2rem;font-size:.7rem;font-weight:600;letter-spacing:.5px;display:flex;align-items:center;gap:.25rem;cursor:pointer;transition:.25s}
.filter-chip.active,.filter-chip:hover{background:#0d6efd;color:#fff}
.appointment-card{transition:transform .25s ease,box-shadow .25s ease,border-color .25s;border:1px solid #e5e7eb;border-radius:1.25rem}
.appointment-card:hover{transform:translateY(-6px);box-shadow:0 .75rem 1.5rem rgba(0,0,0,.12);border-color:#d0d7de}
.appointment-avatar{width:44px;height:44px;border-radius:50%;display:flex;align-items:center;justify-content:center;font-size:1.2rem}
.status-badge{font-size:.6rem;letter-spacing:.5px}
.empty-state{animation:fadeIn .4s ease}
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
}
