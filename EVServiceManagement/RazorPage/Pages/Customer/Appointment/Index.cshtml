@page
@model RazorPage.Pages.Customer.Appointment.IndexModel
@{
    ViewData["Title"] = "Lịch hẹn của tôi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">📅 Lịch hẹn của bạn</h2>
        <a asp-page="/Customer/Appointment/Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Đặt lịch mới
        </a>
    </div>

    @if (Model.AppointmentDtos == null || !Model.AppointmentDtos.Any())
    {
        <div class="alert alert-info text-center">
            Bạn chưa có lịch hẹn nào. Hãy <a asp-page="/Customer/Appointment/Create">đặt lịch ngay</a> để bảo dưỡng xe của bạn!
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Mã lịch hẹn</th>
                        <th>Xe</th>
                        <th>Ngày hẹn</th>
                        <th>Dịch vụ</th>
                        <th>Kỹ thuật viên</th>
                        <th>Tổng chi phí</th>
                        <th>Thanh toán</th>
                        <th>Trạng thái</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appt in Model.AppointmentDtos.OrderByDescending(x => x.PreferredDate))
                    {
                        var payment = appt.PaymentDtos.FirstOrDefault();
                        var totalAmount = payment?.TotalAmount ?? 0;
                        var paid = payment?.PaidAmount ?? 0;
                       // var remaining = payment?.RemainingAmount ?? totalAmount;
                       // var paymentStatus = payment?.PaymentStatus ?? "Chưa thanh toán";

                        <tr>
                            <td>#@appt.AppointmentId</td>
                            <td>
                                <div>
                                    <strong>@appt.VehicleDto.Model</strong><br />
                                    <small class="text-muted">@appt.VehicleDto.LicensePlate</small>
                                </div>
                            </td>
                            <td>@appt.PreferredDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (appt.ServiceOrderDetailDtos.Any())
                                {
                                    <ul class="list-unstyled mb-0">
                                        @foreach (var s in appt.ServiceOrderDetailDtos.Take(2))
                                        {
                                            <li>- @s.ServiceDto?.Name (@String.Format("{0:N0}₫", s.TotalPrice))</li>
                                        }
                                        @if (appt.ServiceOrderDetailDtos.Count > 2)
                                        {
                                            <li class="text-muted small">+ @appt.ServiceOrderDetailDtos.Count - 2 dịch vụ khác</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa có dịch vụ</span>
                                }
                            </td>
                            <td>
                                @if (appt.TechnicianDtos.Any())
                                {
                                    <ul class="list-unstyled mb-0">
                                        @foreach (var t in appt.TechnicianDtos)
                                        {
                                            <li>@t.AccountDto.FullName</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa phân công</span>
                                }
                            </td>
                            <td>@String.Format("{0:N0}₫", totalAmount)</td>
                            <td>
                                @* @if (remaining == 0)
                                {
                                    <span class="badge bg-success">Đã thanh toán</span>
                                }
                                else if (paid > 0)
                                {
                                    <span class="badge bg-warning text-dark">Đã trả @String.Format("{0:N0}₫", paid)</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Chưa thanh toán</span>
                                } *@
                            </td>
                            <td>
                                @switch (appt.Status)
                                {
                                    case "Pending":
                                        <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                                        ;
                                        break;
                                    case "Confirmed":
                                        <span class="badge bg-info text-dark">Đã xác nhận</span>
                                        ;
                                        break;
                                    case "InProgress":
                                        <span class="badge bg-primary">Đang bảo dưỡng</span>
                                        ;
                                        break;
                                    case "Completed":
                                        <span class="badge bg-success">Hoàn tất</span>
                                        ;
                                        break;
                                    case "Cancelled":
                                        <span class="badge bg-secondary">Đã hủy</span>
                                        ;
                                        break;
                                    default:
                                        <span class="badge bg-light text-dark">@appt.Status</span>
                                        ;
                                        break;
                                }
                            </td>
                            <td class="text-center">
                                <a asp-page="Details" asp-route-id="@appt.AppointmentId" class="btn btn-sm btn-outline-info me-1">
                                    <i class="bi bi-eye"></i> Xem
                                </a>

                                @if (appt.Status == "Pending")
                                {
                                    <a asp-page="Cancel" asp-route-id="@appt.AppointmentId"
                                       class="btn btn-sm btn-outline-danger me-1"
                                       onclick="return confirm('Bạn có chắc muốn hủy lịch hẹn này không?');">
                                        <i class="bi bi-x-circle"></i> Hủy
                                    </a>
                                }

                                @if (appt.Status == "Completed")
                                {
                                    <a asp-page="Rebook" asp-route-id="@appt.AppointmentId"
                                       class="btn btn-sm btn-outline-success">
                                        <i class="bi bi-arrow-repeat"></i> Đặt lại
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
