@page "{id?}"
@model RazorPage.Pages.Customer.Vehicle.EditModel
@{
    ViewData["Title"] = "Cập nhật xe";
}

<style>
  .edit-vehicle-container { max-width: 760px; }
  .vin-input, .plate-input { text-transform: uppercase; }
</style>

<div class="edit-vehicle-container mx-auto">
    <h1 class="mb-3">Cập nhật xe</h1>

    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <strong>Lỗi:</strong> @Model.ErrorMessage
        </div>
    }

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form method="post" class="needs-validation" novalidate>
        <input asp-for="UpdateVehicleDto.VehicleId" type="hidden" />

        <div class="card shadow-sm">
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="UpdateVehicleDto.Model" class="form-label">Mẫu xe</label>
                    <input asp-for="UpdateVehicleDto.Model" class="form-control" required />
                    <span asp-validation-for="UpdateVehicleDto.Model" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UpdateVehicleDto.Vin" class="form-label">Số VIN</label>
                    <input asp-for="UpdateVehicleDto.Vin" class="form-control vin-input" />
                    <span asp-validation-for="UpdateVehicleDto.Vin" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UpdateVehicleDto.LicensePlate" class="form-label">Biển số</label>
                    <input asp-for="UpdateVehicleDto.LicensePlate" class="form-control plate-input" required />
                    <span asp-validation-for="UpdateVehicleDto.LicensePlate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UpdateVehicleDto.CurrentKm" class="form-label">Số km hiện tại</label>
                    <div class="input-group">
                        <input asp-for="UpdateVehicleDto.CurrentKm" class="form-control" type="number" step="0.1" min="0" />
                        <span class="input-group-text">km</span>
                    </div>
                    <span asp-validation-for="UpdateVehicleDto.CurrentKm" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer d-flex gap-2 justify-content-end">
                <a asp-page="/Customer/Vehicle/Index" class="btn btn-outline-secondary">Hủy</a>
                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}
