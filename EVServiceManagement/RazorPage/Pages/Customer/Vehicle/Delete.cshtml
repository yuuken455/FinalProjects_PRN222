@page "{id?}"
@model RazorPage.Pages.Customer.Vehicle.DeleteModel
@{
    ViewData["Title"] = "Xóa xe";
    var idValue = ViewContext.RouteData.Values["id"]?.ToString();
}

<h1 class="mb-3">Xóa xe</h1>

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        <strong>Đã xảy ra lỗi khi xóa xe.</strong>
        <div class="mt-2">@Model.ErrorMessage</div>
    </div>
}
else
{
    <div class="alert alert-warning" role="alert">
        Không có thông tin lỗi. Vui lòng quay lại danh sách.
    </div>
}

<div class="d-flex gap-2 mt-3">
    <a asp-page="/Customer/Vehicle/Index" class="btn btn-secondary">Quay lại danh sách</a>
    @if (!string.IsNullOrEmpty(idValue))
    {
        <a asp-page="./Delete" asp-route-id="@idValue" class="btn btn-danger">Thử lại xóa</a>
    }
</div>