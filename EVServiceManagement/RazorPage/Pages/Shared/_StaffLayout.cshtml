@{
    Layout = "_Layout"; 
}

<style>
    /* Ensure robust layout regardless of page inner scrolling */
    .staff-shell { display:flex; height:100vh; width:100%; overflow:hidden; }
    .staff-sidebar { flex: 0 0 250px; max-width:250px; min-width:250px; background:#212529; color:#fff; overflow-y:auto; display:flex; flex-direction:column; }
    .staff-content { flex: 1 1 auto; overflow:auto; background:#f8f9fa; }
    .staff-sidebar .nav-link { color:#fff; }
    .staff-sidebar .nav-link.active, .staff-sidebar .nav-link:hover { background:rgba(255,255,255,.1); border-radius:.5rem; }
    .logout-btn { margin-top:auto; }
</style>

<div class="staff-shell">
    <nav class="staff-sidebar p-3">
        <h4 class="text-center mb-4">Staff Dashboard</h4>
        <ul class="nav flex-column mb-4">
            <li class="nav-item mb-2">
                <a class="nav-link" asp-page="/Staff/Index">
                    <i class="bi bi-house"></i> Home
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link" asp-page="/Staff/Appointment/Index">
                    <i class="bi bi-calendar-check"></i> Appointment
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link" asp-page="/Staff/Part/Index">
                    <i class="bi bi-tools"></i> Parts
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link" asp-page="/Staff/PartRequest/Index">
                    <i class="bi bi-box"></i> Part Requests
                </a>
            </li>
        </ul>
        <form method="post" asp-page="/Logout" class="logout-btn">
            <button type="submit" class="btn btn-outline-light w-100"><i class="bi bi-box-arrow-right"></i> Đăng xuất</button>
        </form>
    </nav>

    <div class="staff-content p-4">
        @RenderBody()
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    @RenderSection("Scripts", required: false)
}
